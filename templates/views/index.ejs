<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore</title>
    <link rel="stylesheet" href="">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" type="image/png" href="/images/icon-1.png" />
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar">
            <div class="navbar-wrapper center">
                <a href="/" class="logo">Explore</a>
                <div class="navbar-links">
                    <a href="#home">Home</a>
                    <a href="#explorer">Explorer</a>
                    <!-- <a href="#link">Map</a> -->
                    <!-- <a href="#link">About</a> -->
                </div>
            </div>
        </nav>
        <!-- End of Navbar -->

        <!-- Section 1 -->
        <section class="section-1 active" id="home">
            <div class="section-1-wrapper">
                <div class="banner">
                    <h1 class="banner-heading-1">Explore</h1>
                    <h1 class="banner-heading-2">The World</h1>
                    <p class="banner-text">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ab asperiores ipsum iste, expedita veritatis amet nesciunt labore eligendi cupiditate aliquid doloremque libero.</p>
                    <button class="section-1-btn">Explore</button>
                </div>
                
                <div class="social-media center">
                    <a href="#link">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#link">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#link">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>
        </section>
        <!-- End of Section 1 -->

        <!-- Section 2 -->
        <section class="section-2" id="explorer">
            <div class="section-2-wrapper center">
                <div class="countries">
                    <div class="idk1 center">
                        <form class="search-form">
                            <input type="text" class="search-inp" placeholder="Search for a country...">
                        </form>
                    </div>
                    <div class="idk2">
                        <ul class="countries-list">
                            <% for(let i=0; i<body.length; i++) { %> 
                                <li class="country" id="<%= body[i].name.common %>" onclick="getName(this)">
                                    <div class="main">
                                        <h2 class="country-name"><%= body[i].name.common %>  <span class="alt-name"><%= body[i].name.official %></span></h2>
                                        <span class="oth">
                                            <i class="fas fa-map-pin"></i>
                                            <small class="capital"><%= body[i].capital %></small>
                                        </span>
                                    </div>
                                    <div class="flag center">
                                        <img src="<%= body[i].flags.png %>">
                                    </div>
                                </li>
                            <% } %> 
                        </ul>
                    </div>
                </div>
                <div class="side-section show">
                    <div class="bg-refs center">
                        <p class="bg-text">Click on any country to display it here...</p>
                        <i class="fas fa-search-location bg-logo"></i>
                    </div>

                    <div class="country-main"></div>
                </div>
            </div>
        </section>
        <!-- End of Section 2 -->
    </div>
    
    <script src="/js/country.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>